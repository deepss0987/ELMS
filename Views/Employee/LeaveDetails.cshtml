@using ELMS.Data.Entities
@model List<LeaveBudgetViewModel>


<html>      
<body>
    <nav class="navbar navbar-expand-lg ">
        <a class="navbar-brand" href="#">ELMS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
                @if (User?.Identity?.IsAuthenticated == true)
                {
                   
                     
                <a class="nav-link" href="#">About</a>
                <a class="nav-link" href="#">Contact</a>
                 
                <a class="nav-link" href="\Employee\LeaveApply"> Apply&nbsp;Leave </a>
              
                }
            </ul>
        </div>
        @if (!(User?.Identity?.IsAuthenticated ?? false))
        {
        <div class="col-md-12 text-center">
            <div class="button" style="margin-left: 50px;">
                <a href="\Account\Login" class="btn btn-outline-primary me-2">Login</a>
            </div>
        </div>
        }
        else
        {
        <div class="container-fluid">
            <div class="d-flex ms-auto">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    @User.Identity.Name
                </button>
                <ul class="dropdown-menu dropdown-menu-md-end" aria-labelledby=" dropdownMenuButton1">
                   
                    <li><a class="dropdown-item" href="\Account\MyProfile">My Profile</a></li>
                    <li><a class="dropdown-item" href="\Account\Logout">Logout</a></li>
                </ul>
            </div>
        </div>

        }
    </nav>

        <div class="main-card">
            <div class="p-5 rounded-lg gap-6 bg-gray-100">
            <h2 class="text-left mb-4">Leave Details</h2>

                <table class="leave-table">

                    <thead>

                        <tr>
                            <th> Leave Type </th>
                            <th> Total </th>
                            <th> Remaining Balance </th>
                            <th> Availed </th>

                        </tr>

                    </thead>

                    <tbody>

                        @foreach (var item in Model)

                        {

                        <tr>

                            <td> @item.LeaveTypeName </td>

                            <td> @item.OpeningBalance </td>

                            <td> @item.RemainingBalance </td>

                            <td> @item.Availed </td>

                        </tr>

                        }

                    </tbody>

                </table>

            </div>

        </div>
</body>
</html>
<style>
    .navbar {
        background: #020024;
        background: linear-gradient(90deg, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 35%, rgba(0, 212, 255, 1) 100%);
        padding: 7px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .navbar-brand {
        color: floralwhite;
        text-decoration: none;
    }

    .dropdown-menu {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .dropdown-item {
        color: #333;
        padding: 10px 45px;
        text-decoration: none;
        align-content: center;
    }

        .dropdown-item:hover {
            background-color: #f0f0f0;
        }

    .btn {
        background-color: floralwhite;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        color: #333;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #e0e0e0;
        }

    .btn-primary {
        background-color: #3976f6;
        color: #fff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #2956b8;
        }

    .btn-outline-primary {
        border: 1px solid #3976f6;
        color: #3976f6;
    }

        .btn-outline-primary:hover {
            background-color: #e5ecfa;
            color: #3976f6;
        }

    .navbar-nav {
        display: flex;
        gap: 20px;
    }

    .nav-link {
        color: #545a6c;
        text-decoration: none;
        font-weight: 500;
    }

        .nav-link:hover {
            color: #3976f6;
        }

    .nav-item.active .nav-link {
        color: #3976f6;
        font-weight: bold;
    }

    .nav-item.dropdown .dropdown-toggle {
        color: #545a6c;
    }

        
    .nav-item.dropdown .dropdown-toggle:hover {
            color: #3976f6;
    }

    .nav-item.dropdown .dropdown-menu {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .nav-item.dropdown .dropdown-item {
        color: #333;
        padding: 10px 20px;
        text-decoration: none;
    }

    .nav-item.dropdown .dropdown-item:hover {
        background-color: #f0f0f0;
    }
    .main-card {
        margin: 20px;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .leave-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }
    .leave-table th, .leave-table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    .leave-table tr:hover {
        background-color: #f9f9f9;
    }
    .leave-table th, .leave-table td {
        text-align: center;
    }
    .leave-table th {
        background-color: #3976f6;
        color: white;
        padding: 12px;
        text-align: center;
        font-weight: bold; border-bottom: 1px solid #ddd;
    }
    .leave-table td {
        background-color: #f9f9f9;
        color: #555;
    }
    .leave-table tr:nth-child(even) {
        background-color: #f2f2f2;
    }
    .leave-table tr:nth-child(odd) {
        background-color: #ffffff;
    }
    .leave-table tr:hover {
        background-color: #e0e0e0;
    }
</style>