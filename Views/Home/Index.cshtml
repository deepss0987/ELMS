@{
    ViewData["Title"] = "Home Page";
    var isAdminUser = User.IsInRole("1");
    var IsManageruser = User.IsInRole("2");
    var isEmployeeUser = User.IsInRole("3");
}
<html>
    <body>
    <nav class="navbar navbar-expand-lg ">
        <a class="navbar-brand" href="#">ELMS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home</a>
                </li>
               
                @if (isAdminUser)
                {
                    <div class="navbar-collapse" id="navbarNavDarkDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                    <li><a class="dropdown-item" href="\Employee\Index">Manage Employee</a></li>

                                </ul>
                            </li>
                        </ul>
                    </div>
                }
                @if (User?.Identity?.IsAuthenticated == true && isEmployeeUser)
                {
                    <a class="nav-link" href="\Employee\LeaveApply"> Apply&nbsp;Leave </a>
                    <a class="nav-link" href="#">Contact</a>
                    <a class="nav-link" href="#">About</a>
                }
                @if(User?.Identity?.IsAuthenticated == true && IsManageruser)
                {
                    <a class="nav-link" href="\Employee\LeaveApproval"> Leave&nbsp;Approval </a>
                     <a class="nav-link" href="\Employee\LeaveApply"> Apply&nbsp;Leave </a>
                    <a class="nav-link" href="#">Contact</a>
                    <a class="nav-link" href="#">About</a>
                }
            </ul>
        </div>
                @if (!(User?.Identity?.IsAuthenticated ?? false))
                {
                    <div class="col-md-12 text-center">
                        <div class="button" style="margin-left: 50px;">
                            <a href="\Account\Login" class="btn btn-outline-primary me-2">Login</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="container-fluid">
                        <div class="d-flex ms-auto">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-md-end" aria-labelledby=" dropdownMenuButton1">
                                <li><a class="dropdown-item" href="\Employee\LeaveDetails">Leave Details</a></li>
                                <li><a class="dropdown-item" href="\Account\MyProfile">My Profile</a></li>
                                <li><a class="dropdown-item" href="\Account\Logout">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                  
                }
    </nav>
    <div class="main-card">
    <div class="left-section" style="margin-top: 80px;">
        <div class="headline">
            Welcome to <span class="elms">ELMS.</span><br />
            Leave management, simplified.
        </div>
        <div class="desc">
            Employee Leave Management empowers you to efficiently manage employee leave requests, approvals, and records.<br>
            Streamline your leave workflows with a modern, flexible, and user-friendly platform.
        </div>
    </div>

    <div class="right-section">
        <img src="~/images/Work-feature-image.png" alt="work photo" style="max-width: 500px; width: 100%;" />
    </div>
</div> 
  </body>
</html>
<style>
    body {
        background: #fff;
        min-height: 100vh;
    }
    .main-card {
        background: #fff;
        border-radius: 20px;
        margin: 40px auto;
        max-width: 1100px;
        padding: 48px 40px 56px 40px;
        box-shadow: 0 12px 32px 0 rgba(60, 72, 101, .08);
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        position: relative;
    }
    .left-section {
        max-width: 420px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .brand {
        color: #3976f6;
        font-size: 26px;
        font-weight: bold;
        margin-bottom: 48px;
        letter-spacing: 1px;
    }
    .headline {
        font-size: 2.3rem;
        font-weight: 600;
        margin-bottom: 12px;
        line-height: 1.2;
    }
    .headline .elms {
        color: #3976f6;
    }
    .desc {
        font-size: 1.1rem;
        line-height: 1.5rem;
    }
    .right-section {
        display: flex;
        align-items: center;
    }
    .navbar {
        background: #020024;
        background: linear-gradient(90deg, rgba(2, 0, 36, 1) 0%, rgba(9, 9, 121, 1) 35%, rgba(0, 212, 255, 1) 100%);
        padding: 7px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .navbar-brand {
        color: floralwhite;
        text-decoration: none;
    }
    .dropdown-menu {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 10px 12px;
        
    }
    .dropdown-item {
        color: #333;
        padding: 10px 45px;
        text-decoration: none;
        align-content:center;
        display: block;


    }
    .dropdown-item:hover {
        background-color: #f0f0f0;
    }
    .btn {
        background-color: floralwhite;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        color: #333;
        cursor: pointer;
    }
    .btn:hover {
        background-color: #e0e0e0;
        }

    .btn-primary {
        background-color: #3976f6;
        color: #fff;
        border: none;
    }
    .btn-primary:hover {
        background-color: #2956b8;
    }
    .btn-outline-primary {
        border: 1px solid #3976f6;
        color: #3976f6;
    }
    .btn-outline-primary:hover {
        background-color: #e5ecfa;
        color: #3976f6;
    }
    .navbar-nav {
        display: flex;
        gap: 20px;
    }
    .nav-link {
        color: #545a6c;
        text-decoration: none;
        font-weight: 500;
    }
    .nav-link:hover {
        color: #3976f6;
    }
    .nav-item.active .nav-link {
        color: #3976f6;
        font-weight: bold;
    }
    .nav-item.dropdown .dropdown-toggle {
        color: #545a6c;
    }
    .nav-item.dropdown .dropdown-toggle:hover {
        color: #3976f6;
    }
    .nav-item.dropdown .dropdown-menu {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .nav-item.dropdown .dropdown-item {
        color: #333;
        padding: 10px 20px;
        text-decoration: none;
    }
    .nav-item.dropdown .dropdown-item:hover {
        background-color: #f0f0f0;
    }


</style>
